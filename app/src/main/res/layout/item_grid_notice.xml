<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:gravity="left|center"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_datetime_title"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/notice_title"
        android:gravity="center"
        android:text="2018/11/18 "
        android:textSize="@dimen/dp_20"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left|center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left|center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left|center"
                android:lines="2"
                android:textSize="@dimen/dp_25"
                android:text="公文标题XXXX "
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/img_hot"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/news_hot"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:gravity="left|center"
            android:lines="1"
            android:textSize="@dimen/dp_20"
            android:text="发起人：张朝阳" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawablePadding="5dp"
            android:gravity="left|center"
            android:textSize="@dimen/dp_20"
            android:text="28" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_riqi"
                android:drawablePadding="5dp"
                android:gravity="left|center"
                android:text="12"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>